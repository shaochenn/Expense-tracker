<div class="container text-center">
  <div class="row justify-content-md-center">
    <div class="col col-lg-2 mt-5">

      <div class="dropdown">
        <button class="form-control dropdown-toggle d-flex justify-content-between" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          類別
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/search/categoryId/{{categoryNameToId.家居物業}}">家居物業</a></li>
          <li><a class="dropdown-item" href="/search/categoryId/{{categoryNameToId.交通出行}}">交通出行</a></li>
          <li><a class="dropdown-item" href="/search/categoryId/{{categoryNameToId.休閒娛樂}}">休閒娛樂</a></li>
          <li><a class="dropdown-item" href="/search/categoryId/{{categoryNameToId.餐飲食品}}">餐飲食品</a></li>
          <li><a class="dropdown-item" href="/search/categoryId/{{categoryNameToId.其他}}">其他</a></li>
        </ul>
      </div>

    </div>
  </div>

  <div class="row justify-content-md-center mt-2">
    <div col>
      總金額:<span class="fs-1 text-primary">{{totalAmount}}</span>
    </div>
  </div>
  
  {{#each records}}
  
  <div class="row d-flex justify-content-center align-items-center mt-5">
    <div class="col col-1">
      <i class="{{getImg ../categoryMap this.categoryId}}"></i>
    </div>

    <div class="col col-1">
      <div class="row fw-bold">{{ this.name }}</div>
      <div class="row">{{ fomattedDate this.date }}</div>
    </div>
    <div class="col col-1">{{ this.amount }}元</div>
    <div class="col col-1"><a href="/records/{{ this._id }}/edit">修改</a></div>
    <div class="col col-1">
      <form action="/records/{{ this._id }}?_method=DELETE" method="POST">
        <button type="submit">刪除</button>
      </form>
    </div>
  </div>

  {{/each}}

  <div class="row justify-content-md-center mt-5">
    <div class="col">
      <a href="/records/new" class="btn btn-primary mb-5">新增支出</a>
    </div>
  </div>
</div>